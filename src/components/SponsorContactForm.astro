---
// Sponsor Contact Form Component with Forminit Integration
---

<div class="contact-form-wrapper">
  <form 
    id="sponsor-contact-form" 
    class="contact-form"
    method="POST"
    action="https://forminit.com/f/kcw8ilaoucx"
    accept-charset="UTF-8"
  >
    <h3>Sponsorship Inquiry</h3>

    <div class="form-row">
      <div class="form-group">
        <label for="firstName">First Name *</label>
        <input type="text" id="firstName" name="fi-sender-firstName" placeholder="First Name" required minlength="2">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name *</label>
        <input type="text" id="lastName" name="fi-sender-lastName" placeholder="Last Name" required minlength="2">
      </div>
    </div>

    <div class="form-group">
      <label for="email">Work Email Address *</label>
      <input type="email" id="email" name="fi-sender-email" placeholder="your@company.com" required>
    </div>

    <div class="form-group">
      <label for="company">Company Name *</label>
      <input type="text" id="company" name="fi-text-company" placeholder="Company Name" required>
    </div>

    <div class="form-group">
      <label for="package">Interested Package *</label>
      <select id="package" name="fi-select-package" required>
        <option value="">Select a package...</option>
        <option value="platinum">Platinum (3 available)</option>
        <option value="gold">Gold (4 available)</option>
        <option value="silver">Silver</option>
        <option value="patron">Patron</option>
        <option value="custom">Custom Package</option>
      </select>
    </div>

    <div class="form-group">
      <label for="message">How can we help? *</label>
      <textarea id="message" name="fi-text-message" rows="5" placeholder="Tell us about your sponsorship goals..." required minlength="10"></textarea>
    </div>

    <input type="hidden" name="website_url" style="display:none !important" />

    <button type="submit" class="btn btn-primary btn-full">Submit Sponsorship Request</button>

    <p class="form-note">
      Our sponsorship team will get back to you within 24-48 hours.
    </p>
  </form>
</div>
