---
import '../styles/global.css';

const base = import.meta.env.BASE_URL;

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Mac Admins Europe - For the community, by the community. Join us in Leiden on April 30th for the premier European Apple administration conference." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content="Mac Admin, Apple, macOS, iOS, MDM, Jamf, conference, Europe, Leiden, Netherlands">
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:image" content={`${base}/images/og-image.png`}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" href={`${base}/favicon-96x96.png`} sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
  <link rel="shortcut icon" href={`${base}/favicon.ico`} />
  <link rel="apple-touch-icon" sizes="180x180" href={`${base}/apple-touch-icon.png`} />
  <link rel="manifest" href={`${base}/site.webmanifest`} />
  
  <!-- Analytics -->
     
  <title>{title}</title>
</head>
<body>
  <header class="header">
    <nav class="nav container">
      <a href={base} class="logo">
        <span class="logo-icon">⌘</span>
        <span class="logo-text">Mac Admins <strong>Europe</strong></span>
      </a>
      
      <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
      
      <ul class="nav-menu">
        <li><a href={base}>Home</a></li>
        <li><a href={`${base}/program`}>Program</a></li>
        <li><a href={`${base}/speakers`}>Speakers</a></li>
        <li><a href={`${base}/sponsors`}>Sponsors</a></li>
        <li><a href={`${base}/location`}>Location</a></li>
        <li><a href={`${base}/contact`}>Contact</a></li>
        <li><a href={`${base}/tickets`} class="btn btn-primary">Get Tickets</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <a href={base} class="logo">
            <span class="logo-icon">⌘</span>
            <span class="logo-text">Mac Admins <strong>Europe</strong></span>
          </a>
          <p class="footer-tagline">For the community, by the community</p>
          <div class="footer-social">
            <a href="https://macadmins.slack.com" aria-label="Slack" class="social-link">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zm1.271 0a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zm0 1.271a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zm10.122 2.521a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zm-1.271 0a2.528 2.528 0 0 1-2.521 2.521 2.528 2.528 0 0 1-2.521-2.521V2.522A2.528 2.528 0 0 1 15.165 0a2.528 2.528 0 0 1 2.52 2.522v6.312zm-2.52 10.122a2.528 2.528 0 0 1 2.52 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.521-2.522v-2.522h2.521zm0-1.271a2.527 2.527 0 0 1-2.521-2.521 2.526 2.526 0 0 1 2.521-2.521h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.52h-6.313z"/></svg>
            </a>
            <a href="https://linkedin.com" aria-label="LinkedIn" class="social-link">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a> 
          </div>
        </div>
        
        <div class="footer-links">
          <h4>Event</h4>
          <ul>
            <li><a href={`${base}/program`}>Program</a></li>
            <li><a href={`${base}/speakers`}>Speakers</a></li>
            <li><a href={`${base}/sponsors`}>Sponsors</a></li>
            <li><a href={`${base}/location`}>Location</a></li>
          </ul>
        </div>
        
        <div class="footer-links">
          <h4>Info</h4>
          <ul>
            <li><a href={`${base}/tickets`}>Tickets</a></li>
            <li><a href={`${base}/contact`}>Contact</a></li>
            <li><a href={`${base}/coc`}>Code of Conduct</a></li>
            <li><a href="https://www.google.com/maps/d/u/0/viewer?mid=1JbzWZz3nBKqku0eGQzKRdgsYL6QGFaU&ll=50.792078399000225%2C6.626563800000007&z=4" target="_blank">Community Map</a></li>
            <li><a href={`${base}/privacy`}>Privacy Policy</a></li>
          </ul>
        </div>
        
        <div class="footer-newsletter">
          <h4>Stay Updated</h4>
          <p>Get the latest news about speakers, sessions, and early bird tickets.</p>
          <!-- TODO: Newsletter form requires backend integration (Mailchimp, ConvertKit, etc.) -->
          <form class="newsletter-form">
            <input type="email" placeholder="your@email.com" required>
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </form>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; 2026 Mac Admins Europe. For the community, by the community.</p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile navigation toggle
    const navToggle = document.querySelector('.nav-toggle');
    const navMenu = document.querySelector('.nav-menu');
    
    navToggle?.addEventListener('click', () => {
      const isExpanded = navToggle.getAttribute('aria-expanded') === 'true';
      navToggle.setAttribute('aria-expanded', (!isExpanded).toString());
      navMenu?.classList.toggle('is-open');
    });

    // Header scroll effect
    const header = document.querySelector('.header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header?.classList.add('is-scrolled');
      } else {
        header?.classList.remove('is-scrolled');
      }
    });
  </script>
</body>
</html>
