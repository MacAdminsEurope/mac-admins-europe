---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Page Not Found">
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">Error 404</span>
      <h1>Page Not Found</h1>
      <p>The page you're looking for doesn't exist</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="not-found-content text-center">
        <div class="not-found-icon">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="var(--eu-gold)" stroke-width="2"/>
            <path d="M12 8v4" stroke="var(--eu-gold)" stroke-width="2" stroke-linecap="round"/>
            <circle cx="12" cy="16" r="1" fill="var(--eu-gold)"/>
          </svg>
        </div>

        <p class="not-found-message">Sorry, we couldn't find the page you were looking for.</p>
        <p class="not-found-submessage">It may have been moved, deleted, or perhaps never existed.</p>

        <div class="not-found-actions">
          <a href={`${base}/`} class="btn btn-primary">Return to Homepage</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
