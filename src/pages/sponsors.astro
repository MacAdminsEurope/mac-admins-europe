---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Sponsors | Mac Admins Europe 2026">
  <section class="page-hero">
    <div class="container">
      <span class="section-label">Our Partners</span>
      <h1>Sponsors</h1>
      <p>Mac Admins Europe is made possible by these amazing partners</p>
    </div>
  </section>

  <section class="sponsors-content">
    <div class="container">
      <!-- Hero CTA -->
      <div class="sponsor-hero">
        <h2>Partner with Mac Admins Europe</h2>
        <p class="hero-subtitle">
          Connect with over 4,000 Mac Admin members and IT decision-makers across Europe
        </p>
      </div>

      <!-- Current Sponsors -->
      <div class="current-sponsors">
        <h2 class="section-title">Our 2026 Sponsors</h2>
        <p class="section-subtitle">Join these amazing companies supporting Mac Admins Europe</p>

        <!-- Add sponsor logos here as they come in -->
        <!--
        <div class="sponsor-tier platinum">
          <h3 class="tier-title">Platinum Sponsors</h3>
          <div class="tier-logos">
            <img src="{base}/sponsors/company-logo.png" alt="Company Name" class="sponsor-logo large">
          </div>
        </div>
        -->

        <div class="sponsor-tier">
          <div class="tier-logos">
            <div class="sponsor-placeholder">
              <span>Become a Sponsor</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="sponsor-benefits-section">
        <h2>Become a Sponsor</h2>
        <p class="sponsor-intro">
          Mac Admins Europe brings together IT professionals from across the continent 
          who manage Apple devices in enterprise environments. Sponsoring our event puts 
          your brand in front of decision-makers actively looking for solutions.
        </p>

        <div class="sponsor-benefits">
          <div class="benefit">
            <div class="benefit-icon">üë•</div>
            <h3>Community Impact</h3>
            <p>Connect with 4,000+ Mac Admin community members</p>
          </div>
          <div class="benefit">
            <div class="benefit-icon">üéØ</div>
            <h3>Targeted Audience</h3>
            <p>IT professionals with purchasing influence</p>
          </div>
          <div class="benefit">
            <div class="benefit-icon">ü§ù</div>
            <h3>Face-to-Face</h3>
            <p>In-person networking and relationship building</p>
          </div>
          <div class="benefit">
            <div class="benefit-icon">üì£</div>
            <h3>Brand Visibility</h3>
            <p>Logo placement, booth space, and speaking opportunities</p>
          </div>
        </div>
      </div>

      <!-- Sponsorship Packages -->
      <div class="sponsor-packages-section">
        <h2 class="packages-title">Sponsorship Opportunities</h2>
        <p class="packages-subtitle">Choose the package that best fits your goals</p>

        <div class="packages-grid-new">
          <!-- Patron - Starting tier (left) -->
          <div class="package-card community">
            <div class="package-header">
              <h3>Patron Sponsor</h3>
            </div>
            <div class="package-price-section">
              <span class="package-price">Contact Us</span>
              <span class="price-note">Starting tier</span>
            </div>
            <ul class="package-features">
              <li>Logo on event website</li>
              <li>1 conference pass</li>
              <li>Perfect for startups</li>
            </ul>
          </div>

          <!-- Silver -->
          <div class="package-card silver">
            <div class="package-header">
              <h3>Silver Sponsor</h3>
            </div>
            <div class="package-price-section">
              <span class="package-price">Contact Us</span>
              <span class="price-note">Affordable option</span>
            </div>
            <ul class="package-features">
              <li>Tabletop display</li>
              <li>Logo on website</li>
              <li>2 conference passes</li>
              <li>Social media mention</li>
            </ul>
          </div>

          <!-- Gold -->
          <div class="package-card gold">
            <div class="package-header">
              <h3>Gold Sponsor</h3>
            </div>
            <div class="package-price-section">
              <span class="package-price">Contact Us</span>
              <span class="price-note">Flexible options</span>
            </div>
            <ul class="package-features">
              <li>Standard booth space</li>
              <li>Demo session slot</li>
              <li>Logo on event materials</li>
              <li>3 conference passes</li>
              <li>Social media mentions</li>
              <li>Newsletter mention</li>
            </ul>
          </div>

          <!-- Platinum - Featured (right) -->
          <div class="package-card platinum featured">
            <div class="package-header">
              <h3>Platinum Sponsor</h3>
            </div>
            <div class="package-price-section">
              <span class="package-price">Contact Us</span>
              <span class="price-note">Custom pricing available</span>
            </div>
            <ul class="package-features">
              <li>Premium booth location</li>
              <li>Keynote slot opportunity</li>
              <li>Logo on all materials</li>
              <li>5 conference passes</li>
              <li>Social media promotion</li>
              <li>Newsletter feature</li>
              <li>Exclusive networking event</li>
              <li>Video testimonial opportunity</li>
            </ul>
          </div>
        </div>

        <!-- Custom CTA -->
        <div class="custom-package-cta">
          <h3>Need a Custom Package?</h3>
          <p>Let's discuss how we can create a sponsorship that perfectly matches your goals and budget.</p>
          <a href="mailto:sponsors@macadmins-eu.org?subject=Custom Sponsorship Inquiry" class="btn btn-primary">Contact Our Sponsorship Team</a>
        </div>
      </div>

    </div>
  </section>
</Layout>

