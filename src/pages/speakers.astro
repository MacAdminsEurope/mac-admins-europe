import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Speakers | Mac Admins Europe 2026">
  <section class="page-hero">
    <div class="container">
      <span class="section-label">Meet the Experts</span>
      <h1>Speakers</h1>
      <p>Learn from the leading voices in Apple enterprise management</p>
    </div>
  </section>

  <section class="speakers-content">
    <div class="container">
      <div class="speakers-notice">
        <div class="notice-icon">üé§</div>
        <div class="notice-content">
          <h3>Speaker Announcements Coming Soon</h3>
          <p>We're assembling an incredible lineup of speakers for Mac Admins Europe 2026. Check back regularly or subscribe to our newsletter to be the first to know!</p>
          <div class="notice-deadline">
            <span>Deadline for Keynote proposals:</span>
            <strong>February 28, 2026</strong>
          </div>
        </div>
      </div>

      <div class="speakers-cta">
        <h2>Want to Speak?</h2>
        <p>
          Mac Admins Europe is a community event, and we want to hear from you! 
          Whether you're a seasoned conference speaker or this would be your first time 
          on stage, we encourage you to submit a talk proposal.
        </p>
        
        <div class="talk-types">
          <div class="talk-type">
            <div class="type-icon">üì£</div>
            <h3>Full Session</h3>
            <p>45 minutes to deep dive into a topic. Perfect for technical walkthroughs, case studies, or comprehensive overviews.</p>
          </div>
          <div class="talk-type">
            <div class="type-icon">‚ö°</div>
            <h3>Lightning Talk</h3>
            <p>15 minutes to share a tip, tool, or quick win. Great for first-time speakers or focused topics.</p>
          </div>
          <div class="talk-type">
            <div class="type-icon">üõ†Ô∏è</div>
            <h3>Workshop</h3>
            <p>90 minutes of hands-on learning. Guide attendees through practical exercises and real-world scenarios.</p>
          </div>
        </div>

        <div class="topics-we-love">
          <h3>Topics We Love</h3>
          <div class="topic-tags">
            <span class="topic-tag">macOS Security</span>
            <span class="topic-tag">MDM Solutions</span>
            <span class="topic-tag">Zero Trust</span>
            <span class="topic-tag">Automation & Scripting</span>
            <span class="topic-tag">Swift/SwiftUI for Admins</span>
            <span class="topic-tag">Identity Management</span>
            <span class="topic-tag">Deployment Strategies</span>
            <span class="topic-tag">Compliance & Privacy</span>
            <span class="topic-tag">iOS/iPadOS Management</span>
            <span class="topic-tag">Apple Business Manager</span>
            <span class="topic-tag">Endpoint Detection</span>
            <span class="topic-tag">Configuration Profiles</span>
            <span class="topic-tag">Open Source Tools</span>
            <span class="topic-tag">Real-world Case Studies</span>
            <span class="topic-tag">Career Development</span>
          </div>
        </div>

        <a href={`${base}/submit`} class="btn btn-primary">Submit Your Proposal</a>
      </div>

