---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Contact">
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="container">
      <span class="section-tag">Get in Touch</span>
      <h1>Contact Us</h1>
      <p>Have questions? We'd love to hear from you</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section contact">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Let's Talk</h2>
          <p>
            Whether you have questions about tickets, sponsorship, speaking 
            opportunities, or anything else, our team is ready to help.
          </p>
          
          <div class="contact-methods">
            <div class="contact-method">
              <span class="method-icon">ðŸ“§</span>
              <div>
                <strong>Email</strong>
                <a href="mailto:hello@macadmins-eu.org">hello@macadmins-eu.org</a>
              </div>
            </div>
            
            <div class="contact-method">
              <span class="method-icon">ðŸ’¬</span>
              <div>
                <strong>Slack</strong>
                <a href="https://macadmins.slack.com" target="_blank" rel="noopener">
                  #mac-admins-europe on MacAdmins Slack
                </a>
              </div>
            </div>
            
            <div class="contact-method">
              <span class="method-icon">ðŸ’¼</span>
              <div>
                <strong>LinkedIn</strong>
                <a href="https://linkedin.com/company/mac-admins-europe" target="_blank" rel="noopener">
                  Mac Admins Europe
                </a>
              </div>
            </div>
          </div>
          
          <div class="specific-inquiries">
            <h3>Specific Inquiries</h3>
            <ul>
              <li>
                <strong>Tickets & Registration:</strong>
                <a href="mailto:tickets@macadmins-eu.org">tickets@macadmins-eu.org</a>
              </li>
              <li>
                <strong>Sponsorship:</strong>
                <a href="mailto:sponsors@macadmins-eu.org">sponsors@macadmins-eu.org</a>
              </li>
              <li>
                <strong>Speaking / CFP:</strong>
                <a href="mailto:speakers@macadmins-eu.org">speakers@macadmins-eu.org</a>
              </li>
              <li>
                <strong>Press & Media:</strong>
                <a href="mailto:press@macadmins-eu.org">press@macadmins-eu.org</a>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="contact-form-wrapper">
          <!--
            TODO: This form requires backend integration for static site deployment.
            Options for GitHub Pages:
            - Formspree (https://formspree.io)
            - Netlify Forms (requires Netlify hosting)
            - EmailJS (https://www.emailjs.com)
            - GetForm (https://getform.io)
            Replace action="#" with your form service endpoint
          -->
          <form class="contact-form" action="#" method="POST">
            <h3>Send us a Message</h3>
            
            <div class="form-row">
              <div class="form-group">
                <label for="name">Your Name *</label>
                <input type="text" id="name" name="name" required>
              </div>
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>
            </div>
            
            <div class="form-group">
              <label for="subject">Subject *</label>
              <select id="subject" name="subject" required>
                <option value="">Select a topic...</option>
                <option value="tickets">Tickets & Registration</option>
                <option value="sponsorship">Sponsorship Inquiry</option>
                <option value="speaking">Speaking / CFP</option>
                <option value="press">Press & Media</option>
                <option value="volunteer">Volunteering</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary btn-full">Send Message</button>
            
            <p class="form-note">
              We typically respond within 24-48 hours on business days.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="section newsletter bg-blue">
    <div class="container">
      <div class="newsletter-content">
        <h2 class="text-white">Stay Updated</h2>
        <p class="text-white">Subscribe to our newsletter for the latest conference news and announcements.</p>

        <!--
          TODO: Newsletter form requires backend integration.
          Options: Mailchimp, ConvertKit, EmailOctopus, or Formspree
          Replace action="#" with your newsletter service endpoint
        -->
        <form class="newsletter-form" action="#" method="POST">
          <div class="form-group">
            <input type="email" placeholder="Enter your email" required>
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>