---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const baseUrl = import.meta.env.BASE_URL;
const base = baseUrl === '/' ? '' : baseUrl;
---

<Layout title="Contact">
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">Get in Touch</span>
      <h1>Contact Us</h1>
      <p>Have questions? We'd love to hear from you</p>
    </div>
  </section>


  <!-- Contact Section -->
  <section class="section contact">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Let's Talk</h2>
          <p>
            Whether you have questions about tickets, sponsorship, speaking 
            opportunities, or anything else, our team is ready to help.
          </p>
          
          <div class="contact-methods">
            <div class="contact-method">
              <div>
                <strong>Email</strong>
                <a href="mailto:hello@macadmins-eu.org">hello@macadmins-eu.org</a>
              </div>
            </div>
            
            <div class="contact-method">
              <div>
                <strong>Slack</strong>
                <a href="https://macadmins.slack.com" target="_blank" rel="noopener">
                  #mac-admins-europe on MacAdmins Slack
                </a>
              </div>
            </div>
            
            <div class="contact-method">
              <div>
                <strong>Discord</strong>
                <a href="https://discord.gg/macadmins-eu" target="_blank" rel="noopener">
                  Mac Admins Europe
                </a>
              </div>
            </div>
          </div>
          
        </div>

        <ContactForm />
    </div>
  </section>

    <!-- Team Section -->
  <section class="section team-section">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-label">The People Behind the Event</span>
        <h2>Meet the Team</h2>
        <p>The volunteers who make Mac Admins Europe happen</p>
      </div>
      
      <div class="team-grid">
      
                <div class="team-card">
          <div class="team-photo">
            <img src={`${base}/img/team/mischa.jpg`} alt="Mischa van der Bent">
          </div>
          <div class="team-info">
            <h3>Mischa van der Bent</h3>
            <span class="team-role">appleshare.it</span>
            <p class="team-bio">
He is a seasoned Apple IT professional and community leader. He runs the Benelux Mac Admin community and is a founding member of this conference. Throughout his career, he has held many technical roles, from support engineer to Technical Director and CIO of an enterprise reseller, focusing on keeping Apple management simple, scalable, connecting the dots, and automating what is possible.            </p>
