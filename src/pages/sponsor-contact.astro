---
import Layout from "../layouts/Layout.astro";
import SponsorContactForm from "../components/SponsorContactForm.astro";

const baseUrl = import.meta.env.BASE_URL;
const base = baseUrl === "/" ? "" : baseUrl;
---

<Layout title="Sponsor Contact | Mac Admins Europe 2026">
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">Partner With Us</span>
      <h1>Become a Sponsor</h1>
      <p>Fill out the form below and our sponsorship team will be in touch</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section contact">
    <div class="container">
      <div class="sponsor-contact-container">
        <div class="contact-info text-center max-w-700">
          <h2>Let's Discuss Your Partnership</h2>
          <p>
            Whether you're interested in one of our standard packages or want to
            discuss a custom opportunity, we're here to help you find the best
            way to connect with the Mac Admin community.
          </p>

          <!-- Pricing Summary Cards -->
          <div class="pricing-summary-grid">
            <div class="pricing-summary-card patron">
              <span class="tier-label">Patron</span>
              <span class="tier-price">€500 +VAT</span>
              <span class="tier-availability">&nbsp;</span>
            </div>
            <div class="pricing-summary-card silver">
              <span class="tier-label">Silver</span>
              <span class="tier-price">€2,000 +VAT</span>
              <span class="tier-availability">&nbsp;</span>
            </div>
            <div class="pricing-summary-card gold sold-out">
              <span class="tier-label">Gold</span>
              <span class="tier-price">€4,500 +VAT</span>
              <span class="tier-availability tier-sold-out">Sold Out</span>
            </div>
            <div class="pricing-summary-card platinum sold-out">
              <span class="tier-label">Platinum</span>
              <span class="tier-price">€8,000 +VAT</span>
              <span class="tier-availability tier-sold-out">Sold Out</span>
            </div>
          </div>

          <!-- PDF Download Box -->
          <div class="pdf-download-box">
            <svg class="pdf-download-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="12" y1="18" x2="12" y2="12"></line>
              <line x1="9" y1="15" x2="15" y2="15"></line>
            </svg>
            <div class="pdf-download-content">
              <h3>Download Sponsorship Prospectus</h3>
              <p>View complete tier details and benefits</p>
            </div>
            <a href={`${base}/pdf/sponsor-tiers.pdf`} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
              Download PDF
            </a>
          </div>

          <div class="contact-methods-simple">
            <div class="contact-method-inline">
              <strong><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 0.25em;"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg> Email:</strong>
              <a href="mailto:sponsors@macadmins-eu.org">sponsors@macadmins-eu.org</a>
              <br/>
            </div>
          </div>
        </div>

        <div class="sponsor-form-full">
          <SponsorContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>

