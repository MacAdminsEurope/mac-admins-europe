  }

  .section-header p {
    color: var(--gray-600);
    max-width: 600px;
    margin: 0 auto;
  }

  .text-center {
    text-align: center;
  }

  /* Map Section */
  .map-section {
    margin-bottom: var(--space-4xl);
  }

  .map-embed {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    margin-bottom: var(--space-3xl);
  }

  /* Regional Groups */
  .regional-groups {
    text-align: center;
  }

  .regional-groups h3 {
    margin-bottom: var(--space-sm);
    text-align: center;
  }

  .groups-intro {
    color: var(--gray-600);
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .groups-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    max-width: 900px;
    margin: 0 auto;
  }

  .group-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--off-white);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .group-item:hover {
    background: var(--eu-blue);
    color: var(--white);
  }

  .group-flag {
    font-size: 1.25rem;
  }

  .group-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--gray-700);
  }

  .group-item:hover .group-name {
    color: var(--white);
  }

  /* Community Events */
  .events-section {
    margin-bottom: var(--space-4xl);
  }

  .community-events-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
  }

  .community-event-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: var(--off-white);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .community-event-card:hover {
    background: var(--eu-blue);
  }

  .community-event-card:hover h3 {
    color: var(--eu-gold);
  }

  .community-event-card:hover .event-location,
  .community-event-card:hover .event-tagline {
    color: var(--white);
  }

  .community-event-logo {
    width: 150px;
    height: 150px;
    margin-bottom: var(--space-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg);
    overflow: hidden;
    position: relative;
  }

  .community-event-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  /* Mac Admins Europe logo swap */
  .mac-admins-europe-card .logo-default {
    display: block;
  }

  .mac-admins-europe-card .logo-hover {
    display: none;
  }

  .mac-admins-europe-card:hover .logo-default {
    display: none;
  }

  .mac-admins-europe-card:hover .logo-hover {
    display: block;
  }

  .community-event-info h3 {
    font-size: 1.25rem;
    color: var(--gray-900);
    margin-bottom: var(--space-xs);
    transition: color var(--transition-base);
  }

  .community-event-info .event-location {
    color: var(--eu-blue);
    font-weight: 500;
    margin-bottom: var(--space-xs);
    transition: color var(--transition-base);
  }

  .community-event-info .event-tagline {
    color: var(--gray-600);
    font-size: 0.9rem;
    transition: color var(--transition-base);
  }

  /* International Conferences */
  .conferences-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    max-width: 900px;
    margin: 0 auto;
  }

