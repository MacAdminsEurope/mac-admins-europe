    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .join-card:hover {
    background: var(--eu-blue);
  }

  .join-card:hover h3,
  .join-card:hover p {
    color: var(--white);
  }

  .join-card:hover .join-icon {
