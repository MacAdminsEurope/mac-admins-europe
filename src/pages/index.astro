  <!-- CTA Section -->
  <section class="cta-section bg-blue">
    <div class="container text-center">
      <h2 class="text-white">Ready to Join Us?</h2>
      <p class="text-white opacity-90 max-w-500 mb-2">
        Secure your spot at Mac Admins Europe 2026. Early bird tickets available now!
      </p>
      <a href={`${base}/tickets`} class="btn btn-primary">Get Your Ticket</a>
    </div>
  </section>


  <!-- Schedule Preview -->
  <section class="schedule-preview">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-label">Save the Date</span>
        <h2>Event Schedule</h2>
        <p>A full day packed with sessions, workshops, and networking</p>
      </div>
      
      <div class="schedule-timeline">
        <div class="timeline-item">
          <div class="timeline-time">08:30</div>
          <div class="timeline-content">
            <h4>Registration & Coffee</h4>
            <p>Check in and grab your badge and welcome coffee</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">09:00</div>
          <div class="timeline-content">
            <h4>Opening Keynote</h4>
            <p>Welcome to Mac Admins Europe 2026</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">10:00</div>
          <div class="timeline-content">
            <h4>Morning Sessions</h4>
            <p>Multiple sessions covering security, automation, and more</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">12:0</div>
          <div class="timeline-content">
            <h4>Lunch & Networking</h4>
            <p>Connect with fellow admins and visit exhibitors</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">13:30</div>
          <div class="timeline-content">
            <h4>Afternoon Sessions</h4>
            <p>Multiple sessions covering security, automation, and more</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">17:30</div>
          <div class="timeline-content">
            <h4>Closing & Drinks</h4>
            <p>Wrap-up and go to the social networking event</p>
          </div>
        </div>
      </div>
      
      <div class="section-cta text-center mt-3">
        <a href={`${base}/program`} class="btn btn-outline">Full Program Coming Soon</a>
      </div>
    </div>
  </section>

  <!-- Location Preview -->
  <section class="location-preview">
    <div class="container">
      <div class="location-grid">
        <div class="location-info">
          <span class="section-label">The Venue</span>
          <h2>Leidse Schouwburg – Stadsgehoorzaal</h2>
          <p class="venue-address-home">
            Breestraat 60, 2311 CK Leiden, Netherlands
          </p>
          <p>
            Experience the conference in a truly historic setting! Located in the heart of Leiden,
            the Leidse Schouwburg (opened 1705, Netherlands' oldest theater) and Stadsgehoorzaal
            (celebrating 200 years in 2026) combine stunning neorenaissance architecture with
            modern conference facilities.
          </p>
          <ul class="location-features">
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>15 min from Schiphol Airport</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Historic city center location</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Excellent public transport connections</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Hotels within walking distance</span>
            </li>
          </ul>
          <a href={`${base}/location`} class="btn btn-outline mt-2">Full Venue & Travel Info</a>
        </div>
        <div class="location-image">
          <img src={`${base}/img/venue-main-side.jpg`} alt="Stadsgehoorzaal venue in Leiden" loading="lazy">
        </div>
      </div>
    </div>
  </section>
