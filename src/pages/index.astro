  <!-- Call for Papers -->
  <section class="cfp bg-blue">
    <div class="container">
      <div class="cfp-content text-center">
        <span class="section-label text-gold">Share Your Knowledge</span>
        <h2 class="text-white">Call for Speakers</h2>
        <p class="text-white" style="opacity: 0.9; max-width: 600px; margin: 0 auto;">
          Have a story to tell? A solution to share? We're looking for speakers 
          from all backgrounds and experience levels. Submit your talk proposal today!
        </p>
        <div class="cfp-deadline">
          <span class="deadline-label">Submission Deadline</span>
          <span class="deadline-date">February 28, 2026</span>
        </div>
        <div class="cfp-button">
          <a href="/submit" class="btn btn-primary mt-2">Submit Your Proposal</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Schedule Preview -->
  <section class="schedule-preview">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-label">Save the Date</span>
        <h2>Event Schedule</h2>
        <p>A full day packed with sessions, workshops, and networking</p>
      </div>
      
      <div class="schedule-timeline">
        <div class="timeline-item">
          <div class="timeline-time">08:00</div>
          <div class="timeline-content">
            <h4>Registration & Coffee</h4>
            <p>Check in and grab your badge and welcome coffee</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">09:00</div>
          <div class="timeline-content">
            <h4>Opening Keynote</h4>
            <p>Welcome to Mac Admins Europe 2026</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">10:00</div>
          <div class="timeline-content">
            <h4>Morning Sessions</h4>
            <p>Multiple tracks covering security, automation, and more</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">12:30</div>
          <div class="timeline-content">
            <h4>Lunch & Networking</h4>
            <p>Connect with fellow admins and visit exhibitors</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">14:00</div>
          <div class="timeline-content">
            <h4>Afternoon Sessions</h4>
            <p>Deep dives and hands-on workshops</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-time">17:00</div>
          <div class="timeline-content">
            <h4>Closing & Drinks</h4>
            <p>Wrap-up and social networking event</p>
          </div>
        </div>
      </div>
      
      <div class="section-cta text-center mt-3">
        <a href="/program" class="btn btn-outline">Full Program Coming Soon</a>
      </div>
    </div>
  </section>

  <!-- Sponsors Section -->
  <section class="sponsors bg-off-white">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-label">Our Partners</span>
        <h2>Sponsors</h2>
        <p>Mac Admins Europe is made possible by these amazing partners</p>
      </div>
      
      <div class="sponsor-tiers">
        <div class="sponsor-tier">
          <h3 class="tier-name">Platinum</h3>
          <div class="sponsor-logos platinum">
            <div class="sponsor-placeholder">Your Logo Here</div>
          </div>
        </div>
        
        <div class="sponsor-tier">
          <h3 class="tier-name">Gold</h3>
          <div class="sponsor-logos gold">
            <div class="sponsor-placeholder">Your Logo Here</div>
            <div class="sponsor-placeholder">Your Logo Here</div>
          </div>
        </div>
        
        <div class="sponsor-tier">
          <h3 class="tier-name">Silver</h3>
          <div class="sponsor-logos silver">
            <div class="sponsor-placeholder">Your Logo Here</div>
            <div class="sponsor-placeholder">Your Logo Here</div>
            <div class="sponsor-placeholder">Your Logo Here</div>
          </div>
        </div>
      </div>
      
      <div class="section-cta text-center mt-3">
        <p class="sponsor-cta-text">Interested in sponsoring Mac Admins Europe?</p>
        <a href="/sponsors" class="btn btn-primary">Become a Sponsor</a>
      </div>
    </div>
  </section>

  <!-- Location Preview -->
  <section class="location-preview">
    <div class="container">
      <div class="location-grid">
        <div class="location-info">
          <span class="section-label">The Venue</span>
          <h2>Leiden, Netherlands</h2>
          <p>
            Just 15 minutes from Amsterdam Schiphol Airport, Leiden is a charming 
            university city with rich history and excellent conference facilities. 
            The perfect setting for Mac Admins Europe 2026.
          </p>
          <ul class="location-features">
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>15 min from Schiphol Airport</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Historic city center</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Excellent public transport</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Hotels within walking distance</span>
            </li>
          </ul>
          <a href="/location" class="btn btn-outline mt-2">Venue Details</a>
        </div>
        <div class="location-map">
          <div class="map-placeholder">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>Interactive map coming soon</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section bg-blue">
    <div class="container text-center">
      <h2 class="text-white">Ready to Join Us?</h2>
      <p class="text-white" style="opacity: 0.9; max-width: 500px; margin: 0 auto var(--space-xl);">
        Secure your spot at Mac Admins Europe 2026. Early bird tickets available now!
      </p>
      <a href="/tickets" class="btn btn-primary">Get Your Ticket</a>
    </div>
  </section>
</Layout>

