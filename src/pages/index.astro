---
import Layout from '../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;
const base = baseUrl === '/' ? '' : baseUrl;

const eventSchema = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": "Mac Admins Europe 2026",
  "startDate": "2026-04-30",
  "endDate": "2026-04-30",
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "location": {
    "@type": "Place",
    "name": "Leidse Schouwburg ‚Äì Stadsgehoorzaal",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Breestraat 60",
      "addressLocality": "Leiden",
      "postalCode": "2311 CK",
      "addressCountry": "NL"
    }
  },
  "image": "https://macadmins-eu.org/images/og-image.png",
  "description": "European community meetup for Apple administrators. Join fellow Mac admins for knowledge sharing, networking, and discovering the latest in macOS and iOS device management.",
  "offers": {
    "@type": "Offer",
    "url": "https://macadmins-eu.org/tickets",
    "availability": "https://schema.org/InStock",
    "price": "75.00",
    "priceCurrency": "EUR",
    "validFrom": "2026-01-01"
  },
  "organizer": {
    "@type": "Organization",
    "name": "Mac Admins Europe",
    "url": "https://macadmins-eu.org"
  }
};
---

<Layout title="Mac Admins Europe 2026 | April 30th, Leiden">
  <script type="application/ld+json" set:html={JSON.stringify(eventSchema)} />
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <div class="hero-pattern"></div>
    </div>
    <div class="container hero-content">
      <div class="hero-badge">
        <span class="cmd">‚åò</span> April 30, 2026 ‚Ä¢ Leiden, Netherlands
      </div>
      <h1>Mac Admins<br><span class="text-gold">Europe</span></h1>
      <p class="hero-tagline">European community meetup for Apple Admins</p>
      <p class="hero-description">
        Join fellow Apple administrators from across Europe for a day of knowledge sharing, 
        networking, and discovering the latest in macOS and iOS device management.
      </p>
      <div class="hero-cta">
        <a href={`${base}/tickets`} class="btn btn-primary">Get Your Ticket</a>
        <a href={`${base}/program`} class="btn btn-secondary">View Program</a>
      </div>
    </div>
    <div class="hero-scroll">
      <span>Scroll to explore</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </div>
  </section>

  <!-- About Section -->
  <section class="about" id="about">
    <div class="container">
      <div class="about-grid">
        <div class="about-content">
          <span class="section-label">About the Event</span>
          <h2>Where European Mac Admins Unite</h2>
          <p>
            Mac Admins Europe brings together system administrators, IT professionals, 
            and Apple enthusiasts from across the continent. Whether you're managing 
            a fleet of thousands of devices or just getting started with MDM, 
            this is your conference.
          </p>
          <p>
            Learn from industry experts, discover new tools and techniques, 
            and connect with peers who face the same challenges you do. 
            From security best practices to automation workflows, 
            we've got sessions for every skill level.
          </p>
          <ul class="about-features">
            <li>
              <span class="feature-icon">‚åò</span>
              <span><strong>Expert Sessions</strong> - Deep dives into macOS, iOS, and enterprise Apple management</span>
            </li>
            <li>
              <span class="feature-icon">‚åò</span>
              <span><strong>Networking</strong> - Connect with the European Mac Admin community</span>
            </li>
            <li>
              <span class="feature-icon">‚åò</span>
              <span><strong>Exhibitors</strong> - Meet the vendors shaping Apple enterprise</span>
            </li>
          </ul>
        </div>
        <div class="about-visual">
          <div class="visual-card">
            <video 
              class="ring-video"
              autoplay 
              muted 
              loop 
              playsinline
            >
              <source src={`${base}/video-header.mp4`} type="video/mp4">
            </video>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Program Banner -->
  <section class="programme-banner">
    <div class="container">
      <div class="programme-banner-announce">
        <span class="programme-announce-badge">üéâ Now Live</span>
        <h2 class="programme-announce-heading">Program &amp; Speakers are Online!</h2>
        <p class="programme-announce-sub">Explore the full day schedule and meet the incredible speaker lineup for Mac Admins Europe 2026.</p>
        <div class="programme-announce-links">
          <a href={`${base}/program`} class="btn btn-white">üìã View Program</a>
          <a href={`${base}/speakers`} class="btn btn-white-outline">üé§ Meet the Speakers</a>
        </div>
      </div>
      <div class="programme-banner-ticket">
        <a href={`${base}/tickets`} class="btn btn-gold btn-lg">üéüÔ∏è Get Your Ticket</a>
        <p class="programme-ticket-note">Secure your spot at Mac Admins Europe 2026</p>
      </div>
    </div>
  </section>

  <!-- Location Preview -->
  <section class="location-preview">
    <div class="container">
      <div class="location-grid">
        <div class="location-info">
          <span class="section-label">The Venue</span>
          <h2>Leidse Schouwburg ‚Äì Stadsgehoorzaal</h2>
          <p class="venue-address-home">
            Breestraat 60, 2311 CK Leiden, Netherlands
          </p>
          <p>
            Experience the conference in a truly historic setting! Located in the heart of Leiden,
            the Leidse Schouwburg (opened 1705, Netherlands' oldest theater) and Stadsgehoorzaal
            (celebrating 200 years in 2026) combine stunning neorenaissance architecture with
            modern conference facilities.
          </p>
          <ul class="location-features">
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>15 min from Schiphol Airport</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Historic city center location</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Excellent public transport connections</span>
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Hotels within walking distance</span>
            </li>
          </ul>
          <a href={`${base}/location`} class="btn btn-outline mt-2">Full Venue & Travel Info</a>
        </div>
        <div class="location-image">
          <img src={`${base}/img/venue-main-side.jpg`} alt="Stadsgehoorzaal venue in Leiden" loading="lazy">
        </div>
      </div>
    </div>
  </section>
</Layout>
